{
  "smtp": {
    "server": "smtp.gmail.com",
    "port": 587,
    "username": "your-email@gmail.com",
    "password": "your-app-password",
    "use_tls": true
  },
  "alerts": {
    "from_email": "alerts@yourcompany.com",
    "to_emails": [
      "admin1@yourcompany.com",
      "admin2@yourcompany.com"
    ],
    "subject_prefix": "[SYSTEM ALERT]"
  },
  "thresholds": {
    "cpu_percent": 80,
    "memory_percent": 85,
    "disk_percent": 90,
    "load_average": 4.0
  },
  "security": {
    "enable_threat_detection": true,
    "failed_login_threshold": 5,
    "suspicious_process_threshold": 3,
    "network_scan_threshold": 10,
    "check_malware_signatures": true,
    "send_threat_emails": true,
    "critical_incidents_only": false
  },
  "monitoring": {
    "check_interval": 60,
    "cooldown_period": 300
  }
}